{
  "name": "mcp-memory",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "servers/mcp-memory/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "outputPath": "dist/servers/mcp-memory",
        "format": ["esm"],
        "bundle": true,
        "main": "servers/mcp-memory/src/main.ts",
        "tsConfig": "servers/mcp-memory/tsconfig.app.json",
        "assets": ["servers/mcp-memory/src/assets"],
        "generatePackageJson": true,
        "external": ["better-sqlite3"],
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        }
      },
      "configurations": {
        "development": {},
        "production": {
          "esbuildOptions": {
            "sourcemap": false,
            "outExtension": {
              ".js": ".js"
            }
          }
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "mcp-memory:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "mcp-memory:build:development"
        },
        "production": {
          "buildTarget": "mcp-memory:build:production"
        }
      }
    }
  }
}
